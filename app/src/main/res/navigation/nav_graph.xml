<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/home_page">

    <fragment
        android:id="@+id/home_page"
        android:name="com.example.gecktrack.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/gecko_page"
        android:name="com.example.gecktrack.ui.dashboard.MyGecksFragment"
        android:label="My Gecks"
        tools:layout="@layout/fragment_my_gecks" >
        <action
            android:id="@+id/action_gecko_page_to_fragment_gecko_data"
            app:destination="@id/fragment_gecko_data" />
        <action
            android:id="@+id/action_gecko_page_to_fragment_selected_gecko"
            app:destination="@id/fragment_selected_gecko" />
    </fragment>

    <fragment
        android:id="@+id/schedule_page"
        android:name="com.example.gecktrack.ui.notifications.CalendarFragment"
        android:label="Schedule"
        tools:layout="@layout/fragment_calendar" />
    <fragment
        android:id="@+id/fragment_gecko_data"
        android:name="com.example.gecktrack.ui.dashboard.fragment_gecko_data"
        android:label="fragment_gecko_data"
        tools:layout="@layout/fragment_gecko_data" >
        <action
            android:id="@+id/action_fragment_gecko_data_to_gecko_page"
            app:destination="@id/gecko_page" />
    </fragment>
    <fragment
        android:id="@+id/fragment_selected_gecko"
        android:name="com.example.gecktrack.ui.dashboard.fragment_selected_gecko"
        android:label="fragment_selected_gecko"
        tools:layout="@layout/fragment_selected_gecko" >
        <action
            android:id="@+id/action_fragment_selected_gecko_to_gecko_page"
            app:destination="@id/gecko_page" />
    </fragment>
    <fragment
        android:id="@+id/fragment_event_data_form"
        android:name="com.example.gecktrack.ui.notifications.fragment_event_data_form"
        android:label="fragment_event_data_form"
        tools:layout="@layout/fragment_event_data_form" />
</navigation>